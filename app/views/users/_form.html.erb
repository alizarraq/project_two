<link
  href="https://fonts.googleapis.com/css2?family=Material+Icons"
   rel="stylesheet"
/>
<style>
.form-item {
  position: relative;
}
.message-error:after {
  content: attr(data-tooltip);
  position: absolute;
 
  display: none;
  padding: 1em 2em;
  color: white;
}

.message-error:hover:after {
  display: block;

}
.message-error:after {
  background-color: #FFC300;
}
</style>
<div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <%= render 'shared/errors', obj: @user %>

        <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
          <div class="form-group row">
            <%= f.label :username, class: "col-2 col-form-label text-light" %>
            <div class="col-9">
              <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
            </div>
             <button type="button" class="col-1 btn form-item message-error"  data-tooltip="you must choose at least one category">
                  <i class="material-icons text-warning">help</i>
          </button>
          </div>
          <br>
          <div class="form-group row">
            <%= f.label :email, class: "col-2 col-form-label text-light" %>
            <div class="col-9"> 
              <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
            </div>
            <button type="button" class="col-1 btn form-item message-error"  data-tooltip="you must choose at least one category">
                  <i class="material-icons text-warning">help</i>
          </button>
          </div>
          <br>
          <div class="form-group row">
            <%= f.label :password, class: "col-2 col-form-label text-light" %>
            <div class="col-9"> 
              <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
            </div>
            <button type="button" class="col-1 btn form-item message-error"  data-tooltip=" 8 digets with a number ">
                  <i class="material-icons text-warning">help</i>
          </button>
          </div>
          <br>
           <div class="form-group row">
            <%= f.label :phone_number, class: "col-2 col-form-label text-light" %>
            <div class="col-9"> 
              <%= f.text_field :phone_number, class: "form-control shadow rounded", placeholder: "Enter your phone_number" %>
            </div>
            <button type="button" class="col-1 btn form-item message-error"  data-tooltip="you must choose at least one category">
                  <i class="material-icons text-warning">help</i>
          </button>
            </div>
            <br>
          <div class="form-group row">
            <%= f.label :address, class: "col-2 col-form-label text-light" %>
            <div class="col-9"> 
                <%= f.select :address, options_for_select(["Amman", "Irbid", "Zarqa", "Mafraq", "Ajloun", "Jerash", "Madaba", "Balqa", "Karak", "Tafileh", "Maan", "Aqaba"]), {}, class: "form-control" %>
          </div>
          </div>
          <br>
          <% if url_for =="/signup/worker" || @user.role =="worker"%>
            <div class="form-group row">
                <%= f.label :category, class: "col-2 col-form-label text-light" %>
                <div class="col-9"> 
                <%= f.collection_select(:category_ids, Category.all, :id, :name,
                    {}, { multiple: true, size: 3, class: "custom-select shadow rounded form-control" }) %>
                </div>
                <button type="button" class="col-1 btn form-item message-error"  data-tooltip="you must choose at least one category">
                  <i class="material-icons text-warning">help</i>
          </button>
            </div>
            <%= f.hidden_field :role, value: "worker" %>
          <br>
         <%end%>
          <div class="form-group row justify-content-center">
            <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
          